<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication</title>
    <link rel="stylesheet" href ="~/css/style.css" />
    <link rel="stylesheet" href="~/css/bootstrap.css"/>

</head>
<body>
    <header>
        <ul class="nav">
            <li class="nav-image">
                <img src="/images/logo1.png" width="50" height="50"/>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Главная страница</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register">Мой аккаунт</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="BookList" asp-action="BuyBook">Каталог</a>
            </li>

        </ul>             
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
